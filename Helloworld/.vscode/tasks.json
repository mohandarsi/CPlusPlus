{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}/build"
    },
    "args": ["-c"],
    "tasks": [
        {
            "label": "Generate",
            "type": "shell",
            "command": "cmake",
            "args": ["-G", "Visual Studio 14 2015", 
                "-DCMAKE_CXX_COMPILER:FILEPATH='C:/Program Files (x86)/Microsoft Visual Studio 14.0/VC/bin/cl.exe'",
                ".."],
            "group": "build",
            "presentation": {
                // Reveal the output.
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "${workspaceRoot}/build", 
                "--config",
                "Release"],

           
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Ninja Example",
            "type": "shell",
            "command": "echo Hello",
            "problemMatcher": [],
             "args": ["-G", "Ninja", 
                "-DCMAKE_CXX_COMPILER:FILEPATH='C:/Program Files (x86)/Microsoft Visual Studio 14.0/VC/bin/cl.exe'",
                "-DCMAKE_MAKE_PROGRAM='C:/Program Files/CMake/bin/ninja.exe'",
                "-DCMAKE_BUILD_TYPE=Debug", ".."],
        }
    ]
}